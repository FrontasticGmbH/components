      "helpText": "Customize your image",
      "fields": [
        {
          "label": "Image",
          "field": "image",
          "type": "media",
          "required": true
        }
      ]
    },
    {
      "name": "Message",
      "helpText": "Customize your tile message",
      "fields": [
        {
          "label": "Subtitle",
          "field": "subtitle",
          "type": "string",
