      "fields": [
        {
          "label": "Full viewport width?",
          "field": "isFullWidth",
          "type": "boolean",
          "default": false
        },
        {
          "label": "Content full width",
          "helpText": "Fills the whole width of the container. Good for wide images",
          "field": "fgIsFullWidth",
          "type": "boolean",
          "required": true,
          "default": true
        },
        {
          "label": "Theme",
          "field": "theme",
